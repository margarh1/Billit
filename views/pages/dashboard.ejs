    <div class="container" ng-controller="InvoicesIndexController as invoicesIndexCtrl">

<!-- new invoice input fields -->
    <form ng-submit="invoicesIndexCtrl.casey()">
      <label for="">Invoice Title:</label>
      <input ng-model="invoicesIndexCtrl.newInvoice.title" type="text" name="Invoice title" value="">
      <label for="">Invoice Number:</label>
      <input ng-model="invoicesIndexCtrl.newInvoice.number" type="text" name="Invoice number" value="">
      <input type="submit" name="" value="submit">
    </form><br>


    <input type="text" class="form-control" placeholder="New invoice title" ng-model="InvoicesIndexCtrl.newInvoice.title">
    <p><b>invoicesIndexCtrl.newInvoice:</b> {{invoicesIndexCtrl.newInvoice}}</p>

<!-- filter invoices -->
    <input type="text" class="form-control" ng-model="searchText" placeholder="Search Invoices">

<!-- templating invoices -->
    <div ng-repeat="invoice in invoicesIndexCtrl.invoices | orderBy: 'title' | filter: searchText" class="row">
      <div class="col-md-10 col-md-offset-1">
        <div class="panel panel-default">
          <li class="list-group-item">
            <h4 class="inline-header">Invoice title:</h4>
            <span>{{invoice.title}}</span>
          </li>
          <li class="list-group-item">
            <h4 class="inline-header">Invoice number:</h4>
            <span>{{invoice.number}}</span>
          </li>
            <div class="col-md-9 col-xs-12">
              <ul class="list-group form-inline">
              </ul>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>




</body>
</html>
